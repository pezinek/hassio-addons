{
  "name": "Node-RED",
  "version": "0.1.3",
  "slug": "nodered",
  "description": "Node-RED - (https://nodered.org/)",
  "url": "https://github.com/pezinek/hassio-addons/tree/master/node-red",
  "webui": "http://[HOST]:[PORT:1880]",
  "arch": [
    "armhf",
    "amd64"
  ],
  "map": [
    "share:rw",
    "ssl"
  ],
  "startup": "application",
  "boot": "auto",
  "host_network": true,
  "options": {
    "ssl": false,
    "certfile": "fullchain.pem",
    "keyfile": "privkey.pem"
  },
  "schema": {
    "ssl": "bool",
    "certfile": "str",
    "keyfile": "str"
  }
}
